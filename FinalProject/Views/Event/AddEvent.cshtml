@model FinalProject.Models.EventViewModels.EventModel
@{
    ViewData["Title"] = "Add New Event";
}

<h3>@ViewData["Message"]</h3>
<div class="card">
    <div class="card-header">
        <h5>@ViewData["Title"]</h2>
    </div>
    <div class="card-body">
        <fieldset class="form-group">
        <hr />
        
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div class="form-group">
                <label class="form-control-label" asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control" />
            </div>
                        <div class="form-group">
                <label class="form-control-label" asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label class="form-control-label" asp-for="Date">Date</label>
                <input asp-for="Date" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-control-label" asp-for="Time">Time</label>
                <input asp-for="Time" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-control-label" asp-for="Location">Location</label>
                <input asp-for="Location" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-control-label" asp-for="NumberOfSeats">Number Of Seats</label>
                <input asp-for="NumberOfSeats" class="form-control" />
            </div>
            
            <button type="submit" class="btn btn-primary btn-block mt-5" id="btnPO">Post event</button>
        </form>
    </fieldset>
    </div>
    
</div>
@section js{
<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
<script>

    $(document).ready(function(){
