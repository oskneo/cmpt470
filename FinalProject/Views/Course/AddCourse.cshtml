        }
        $(document).ready(function(){
            $("#ac").click(function(){
                $.getJSON(url, function(result){
                    $.each(result, function(i, field){
                    $("#show").append(field.value + " ");
            });
        });
        
    });
});
        
        
        
    </script>
}