@using System.Collections.Generic;
@model FinalProject.Models.CourseViewModels.CourseModel
@inject SignInManager<ApplicationUser> SignInManager

<div class="container">
    <h2>Course Page</h2>

<br>

<div id="courseBar" style="float:left">
    <table border="2px">
        <tr><td><button id="Info">Info</button></td></tr>
        <tr><td><button id="Questions">Questions</button></td></tr>
        <tr><td>@Html.ActionLink("Question","AskQuestion","Question")</td></tr>
    </table>
</div>
<div id="courseContent"  style="float:center" ></div>
    @*await Html.PartialAsync("courseInfo", Model)*@
</div>


@section js{
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script>
        $(document).ready(function(){
            $('#courseContent').load('@Url.Action("toCourseInfo", "Course")', { CourseId: @Model.CourseId });
            $('#Info').click(function() {
                $('#courseContent').load('@Url.Action("toCourseInfo", "Course")', { CourseId: @Model.CourseId });
            });
            $('#Questions').click(function() {
                $('#courseContent').load('@Url.Action("toAsk", "Question")', { CourseId: @Model.CourseId });
            });
        });
        
        
        
    </script>


}