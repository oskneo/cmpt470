@inject SignInManager<ApplicationUser> SignInManager
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinalProject</title>

    <environment include="Development">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"
             /> 
        @RenderSection("Styles", false)
        @RenderSection("js", false)
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"
             />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body >
    <div class="container-fluid" style="background-color: #A6192E;">
        <div class="container" style="color: #ffffff;">
            <br>
            <h2>STUDYMATES</h2>
            <h4>You are not alone</h4>
            <br>
        </div>
    </div>
    <nav class="container navbar navbar-expand-lg navbar-light bg-light">
        <div class="navbar-collapse collapse w-200 order-1 order-md-0 dual-collapse2" id="navbarSupportedContent">
            <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Course" asp-action="CoursePage">Course</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Question">Question</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Event" asp-action="ChooseEvent">Event</a>
              </li>
              
              @if (User.IsInRole("Admin")) {
                  <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Manage">Manage</a>
                  </li>
             }
            </ul>
            <ul class="navbar-nav ml-auto">
                @await Html.PartialAsync("_LoginPartial")
            </ul>
        
            
