@model FinalProject.Models.QuestionViewModels.QuestionAndCourse
@{
    ViewData["Title"] = "Ask New Question";
}


<div class="container col-lg-6">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <fieldset class="form-group">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            
            <div class="form-group">
                <label asp-for="Title" class="form-control-label">Title</label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-control-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="6" ></textarea>
            </div>
            
            <div class="form-group">
                <label asp-for="CourseId"></label>
                <select class="form-control"asp-for="CourseId" 
                    asp-items="@(new SelectList(Model.CourseList,"CourseId","Department"))">
                    <option>Please select one</option>
                </select>
                
            </div>
            
            <button type="submit" class="btn btn-primary btn-block mt-5">Post question</button>
        </form>
    </fieldset>
</div>