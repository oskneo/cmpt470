@model FinalProject.Models.QuestionViewModels.AnswerModel
@{
    ViewData["Title"] = "Reply To";
}
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Reply To</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Reply"></label>
                <input asp-for="Reply" class="form-control" />
            </div>
            <input hidden name="RefAId" value="@Model.RefAId">
            <input hidden name="QId" value="@Model.QId">
            <button type="submit" class="btn btn-default">Reply</button>
        </form>
    </div>
</div>
<h3>@ViewData["Message"]</h3>