@model FinalProject.Models.CourseViewModels.CourseModel
@using Microsoft.AspNetCore.Identity
@using FinalProject.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Contact";
}

<div class ="card-header">
    <h5>Live Chat</h5>
</div>


<div id="messageinput" class="container-fluid">
    <div class="container-fluid" style="height:400px;">
        <ul id="liveHelp"></ul>
    </div>
    
    
    <br>
    @if (SignInManager.IsSignedIn(User))
    {
        <div id="nameinput" hidden>Username: <input type="text" id="username" value="@UserManager.GetUserName(User)"/></div>
    }
    else
    {
        <div id="nameinput">Username: <input type="text" id="username" value=""/></div>
    
    }
    
    Send Message: <input type="textarea" id="message" textarea class="form-control" aria-label="With textarea"/> <input type="button" id="send" value="Send" class="btn btn-outline-primary" style="width:150px"/>

</div>




@section scripts {
        <script src="~/js/signalr-client-1.0.0-alpha2-final.js"></script>
        <script src="~/js/contact.js"></script>
        <script>
        addE();
        </script>
        
        }